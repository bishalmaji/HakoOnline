<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="left"
        android:layout_gravity="end"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="+HAKO Points"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:textColor="@color/primary"/>
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/noitem"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:fontFamily="@font/calibri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try Again"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary"
            android:indeterminateTintMode="src_atop"
            android:theme="@style/Widget.AppCompat.ProgressBar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calibri"
            android:text="Loading.." />
    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pulltorefresh"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="top">

                <LinearLayout
                    android:id="@+id/pointsClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="@dimen/dimen_60dp">

                    <ImageView
                        android:id="@+id/random"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:src="@drawable/coin" />

                    <TextView
                        android:id="@+id/points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/calibri"
                        android:gravity="center"
                        android:text="100"
                        android:textSize="40dp"
                        android:textColor="@color/primary" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_margin="16dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvcheckin"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            tools:listitem="@layout/item_dailycheckin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:layout_gravity="center"
                            android:orientation="horizontal"/>
                        <TextView
                            android:id="@+id/claim"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingTop="5dp"
                            android:fontFamily="@font/calibri"
                            android:paddingBottom="5dp"
                            android:paddingEnd="16dp"
                            android:layout_height="wrap_content"
                            android:text="Claim Check-in"
                            android:backgroundTint="@color/yellow"
                            android:background="@drawable/line"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_fact_check_24"/>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Task"
                        android:layout_gravity="center"
                        android:fontFamily="@font/calibrib"
                        android:textSize="16sp"
                        android:textColor="@color/primary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        app:cardElevation="1dp"
                        app:cardUseCompatPadding="false"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5sp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_margin="5dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_local_play_24"/>
                            <TextView
                                android:fontFamily="@font/calibri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary"
                                android:text="Launch a game"/>
                            <TextView
                                android:layout_margin="5dp"
                                android:fontFamily="@font/calibri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25 Points"/>
                            <TextView
                                android:id="@+id/launchGame"
                                android:backgroundTint="@color/yellow"
                                android:layout_marginBottom="10dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:paddingEnd="10dp"
                                android:textSize="10sp"
                                android:paddingStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Play"
                                android:background="@drawable/mega"/>
                          </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="10dp"
                        android:layout_width="0dp"
                        app:cardElevation="1dp"
                        app:cardUseCompatPadding="false"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="16sp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_margin="5dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_local_fire_department_24"/>
                            <TextView
                                android:fontFamily="@font/calibri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary"
                                android:text="Play 3 Game"/>
                            <TextView
                                android:layout_margin="5dp"
                                android:fontFamily="@font/calibri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="75 Points"/>
                            <TextView
                                android:id="@+id/playThree"
                                android:backgroundTint="@color/yellow"
                                android:layout_marginBottom="10dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:paddingEnd="10dp"
                                android:textSize="10sp"
                                android:paddingStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Play"
                                android:background="@drawable/mega"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_marginStart="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="1dp"
                        app:cardUseCompatPadding="false"
                        app:cardCornerRadius="16sp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_margin="5dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_timer_24"/>
                            <TextView
                                android:fontFamily="@font/calibri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary"
                                android:text="ExtraShop"/>
                            <TextView
                                android:layout_margin="5dp"
                                android:fontFamily="@font/calibri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Buy Coins"/>
                            <TextView
                                android:id="@+id/playfifteen"
                                android:backgroundTint="@color/yellow"
                                android:layout_marginBottom="10dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:paddingEnd="10dp"
                                android:textSize="10sp"
                                android:paddingStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Buy Now"
                                android:background="@drawable/mega"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_view_module_24"/>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="play more to earn more"
                        android:layout_gravity="center"
                        android:fontFamily="@font/calibrib"
                        android:textSize="16sp"
                        android:textColor="@color/primary"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5">
                                <ImageView
                                    android:padding="5dp"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/hundred"/>
                                <LinearLayout
                                    android:layout_marginStart="10dp"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Play 100 Games"
                                        android:textColor="@color/primary"
                                        android:fontFamily="@font/calibrib"/>
                                    <TextView
                                        android:id="@+id/totalComplete"
                                        android:textSize="11sp"
                                        android:layout_marginTop="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Completed 0/100"
                                        android:fontFamily="@font/calibri"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5">
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <TextView
                                        android:gravity="center"
                                        android:textSize="11sp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Play"
                                        android:paddingTop="1dp"
                                        android:paddingBottom="1dp"
                                        android:paddingEnd="10sp"
                                        android:paddingStart="10sp"
                                        android:background="@drawable/mega"
                                        android:fontFamily="@font/calibri"/>

                                </LinearLayout>

                        </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginBottom="10sp"
                            android:weightSum="4"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/calibri"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"/>
                                <TextView
                                    android:id="@+id/hone"
                                    android:backgroundTint="@color/yellow"
                                    android:layout_gravity="center"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:background="@drawable/round_shape"/>
                                <TextView
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/calibri"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"/>
                            </LinearLayout>
                            <View
                                android:layout_gravity="center"
                                android:layout_width="25dp"
                                android:layout_height="5dp"
                                android:background="@drawable/round_shape"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/calibri"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+50"/>
                                <TextView
                                    android:id="@+id/htwo"
                                    android:layout_gravity="center"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:background="@drawable/round_shape"/>
                                <TextView
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/calibri"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15"/>

                            </LinearLayout>
                            <View
                                android:layout_gravity="center"
                                android:layout_width="25dp"
                                android:layout_height="5dp"
                                android:background="@drawable/round_shape"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/calibri"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+100"/>
                                <TextView
                                    android:id="@+id/hthree"
                                    android:layout_gravity="center"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:background="@drawable/round_shape"/>
                                <TextView
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/calibri"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"/>
                            </LinearLayout>
                            <View
                                android:layout_gravity="center"
                                android:layout_width="25dp"
                                android:layout_height="5dp"
                                android:background="@drawable/round_shape"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/calibri"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+500"/>
                                <TextView
                                    android:id="@+id/hfour"
                                    android:layout_gravity="center"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:background="@drawable/round_shape"/>
                                <TextView
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/calibri"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="100"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>