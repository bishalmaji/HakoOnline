<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/primary"
    android:layout_height="match_parent"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <Button
            android:id="@+id/login_with_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/login_with_truecaller"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="50dp"
            android:textColor="@color/primary"
            android:backgroundTint="@color/primary"
            android:background="@drawable/btn_background"
            android:drawableLeft="@drawable/common_google_signin_btn_icon_light"
            android:padding="8dp"
            android:text="Sign in With Google"
            android:textSize="12dp" />

        <Button
            android:id="@+id/login_with_truecaller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/terms"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            android:background="@drawable/btn_background"
            android:padding="8dp"
            android:text="Sign in With TrueCaller"
            android:textSize="12dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.1"
            android:visibility="gone"

            app:tint="@color/white"
            tools:ignore="VectorDrawableCompat" />
        <TextView
            android:id="@+id/goodmorning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/title"
            android:layout_marginBottom="5dp"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:text="Hi' Good Morning"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/login_with_google"
            android:layout_marginBottom="16dp"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:text="Welcome Back"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="50dp"
            android:visibility="visible"
            android:layout_marginEnd="25dp"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:id="@+id/img_hori"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:src="@drawable/packman" />
        <LinearLayout
            android:layout_marginTop="150dp"
            android:layout_below="@id/img_hori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Get 100 Points Bonus"
                android:textColor="@color/white" />
            <LinearLayout
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:background="@drawable/line"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    app:tint="@color/gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/emoji"/>

                <EditText
                    android:id="@+id/refer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:hint="Enter Refer Code"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:textColorHint="@color/gray"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:gravity="center"
            android:text="By countinuing, you agree to our\n Terms and Condition Privacy Policy Content Policy"
            android:textColor="@color/gray_100"
            android:textSize="12dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>