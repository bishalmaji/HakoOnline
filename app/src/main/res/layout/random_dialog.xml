<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_holder"
    android:layout_width="325dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:layout_margin="16sp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:id="@+id/load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/loading"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/details"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardCornerRadius="10dp">
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_itemMore_gameImage"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:src="@drawable/test_game"
            android:scaleType="centerCrop"
            android:transitionName="game_icon"
            android:layout_marginBottom="30dp"
            android:background="#2d2d2d"/>
        <LinearLayout
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/color"
            android:gravity="center"
            android:transitionName="game_color"
            android:layout_gravity="bottom"
            android:background="@color/white">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/name"
                android:gravity="center"
                android:textAllCaps="true"
                android:transitionName="game_name"
                android:textSize="15sp"
                android:lines="1"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Book Title"/>
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/playing"
                android:layout_marginBottom="8dp"
                android:lines="1"
                android:textSize="12sp"
                android:transitionName="total_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Book Title"/>
            <LinearLayout

                android:padding="10dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/next"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="NEXT"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textStyle="bold"
                    android:textColor="@color/teal_200"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="16dp"
                    android:background="@color/gray"/>
                <TextView
                    android:id="@+id/play"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="PLAY"
                    android:textSize="16sp"
                    android:textColor="@color/teal_200"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

